package thamarai2006;

public class removewhitespace {

	public static void main(String[] args) {
		 String a = "tham sra xjhvdjw bjhdw";
		 String b="";
	       

	        for (int i = 0; i <a.length(); i++) {
	            if (Character.isWhitespace(a.charAt(i))) {
	               
	            }
	            else{
	            	b=b+(a.charAt(i));
	            }
	        }

	        System.out.println("Total whitespace characters: " +b);
	}

	

}
