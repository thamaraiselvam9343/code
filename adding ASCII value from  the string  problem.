package thamarai;
import java.util.Scanner;
public class even {

	public static void main(String[] args) {
		 System.out.println("Enter The Word:");
		Scanner sc=new Scanner(System.in);
      String a=sc.next();
      int sum =0 ,sum1 =0;
      int i=0;
      while(i < a.length()){
      char dig =a.charAt(i);
      int  dig1=(int)dig;
      sum += dig1 ; //sum = sum + dig1
      System.out.println(dig + " = " + dig1);
      i++;
	}
      System.out.println("Sum : " + sum);
      
      while(sum >0){
       	int dig=sum%10;
          if(dig%2==0){
          	
          	System.out.println("Even numbers:"+dig);
          	sum1=sum1+dig;
          }
          
         	sum=sum/10;
         
   
          }
      System.out.println("Sum Of Total Even Numbers:"+sum1);

      
}
	}
